<body background="img/image2.jpg">
    <%- include('header.ejs') %>
    <div class="rounded-lg px-6 py-2">
    <% if (messages && messages.error && messages.error.length > 0) { %>
        <% for(var i=0; i<messages.error.length; i++) { %>
            <p class="bg-white my-3 list-none rounded-md px-4 py-2 font-serif"><%= messages.error[i] %></p>
        <% } %>
    <% } %>
    </div>
    <!-- breadcrumbs -->
    <div class="flex gap-2 mx-12 mt-7 bg-blue-200">
        <span>--></span>
        <a href="/elections" class="text-blue-800 hover:text-red-600 font-serif hover:text-cyan-900">All Elections</a>
    </div>
    <div class="my-5 mx-10  bg-gray-200">
        <h3 class="text-3xl my-3 text-blue-400 font-medium">Election Name:<%= title %></h3>
        <!-- if launch show this -->
        <% if (launch) { %>
            <div class="py-8">
                <h4 class="text-3xl my-5 font-medium">Your election has been launched Successfully!!!</h4>
                <h4 class="text-3xl my-5 font-medium">URL :</h4>
                <a href="/e/<%= url %>/" class="py-3 hover:text-cyan-800 text-cyan-600 font-serif hover:text-indigo-900 hover:text-white text-2xl">Click Here!!!</a>
                <!-- <a href="/e/<%= url %>/" class="py-3 hover:text-cyan-800 text-cyan-600 font-serif hover:text-indigo-900 hover:text-indigo-900">https://localhost:3000/e/<%= url %></a> -->
            </div>
        <% } %>
        <!-- shows nuber of questions in the ballot -->
        <div class="box">
            <div class="mt-4">
                <h2 class="my-2 text-2xl text-black flex font-serif py-4 c">Number of questions in the ballot are : <span class="text-red-600 font-serif text-2xl"> <%= nq %> </span></h2>
                <% if (!launch) { %>
                    <a href="/elections/<%= id %>/questions" class="but1 py-4 hover:text-black text-cyan-600 font-serif text-2xl">Manage Questions</a>
                <% } %>
            </div>
        </div>
        <!-- shows number of registered voters -->
        <div class="box">
            <div class="mb-8 bt-4">
                <h2 class="my-3 text-2xl text-black flex gap-3 font-serif py-4 c">Number of registered voters for the election : <span class="text-red-600 font-serif text-2xl"> <%= nv %> </span></h2>
                <a href="/elections/<%= id %>/voters" class="but1 py-4 hover:text-cyan-800 text-cyan-600 font-serif hover:text-black text-2xl">Manage Voters</a>
            </div>
        </div>
        <!-- preview and lauch the election -->
        <% if (!launch) { %>
            <div class="bg-blue-800 rounded px-4 py-4 hover:bg-gray-600 font-serif">
                <a href="/elections/<%= id %>/preview" class="text-white font-serif hover:text-cyan-400 c1">Preview & Launch election from here</a>
            </div>
        <% } %>
        <!-- if electionis launched preview results and end the elections -->
        <% if (launch) { %>
            
            <div class="flex c2">
                <div class="bg-blue-800 rounded w-fit px-4 py-3 hover:bg-gray-600 ease-linear transition-all duration-150">
                    
                    <a href="" class="text-white font-serif hover:text-cyan-900 c1">Preview results from here</a>
                </div>
                <br>
                <div class="bg-blue-800 rounded w-fit px-4 py-3 hover:bg-gray-600 ease-linear transition-all duration-150">
                    <a href="" class="text-white font-serif hover:text-cyan-900 c1">End Election</a>
                </div>
            </div>
        <% } %>
    </div>
</body>
</html>